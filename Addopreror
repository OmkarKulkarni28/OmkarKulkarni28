#include <iostream>
using namespace std;
// function for adding two values
void sum(int x, int y)
{
    int z;
    z = x + y;
    cout << "add="<<z<<endl;
}
void sub(int x, int y)
{
    int z;
    z = x - y;
    cout << "substration="<<z<<endl;
}void mul(int x, int y)
{
    int z;
    z = x * y;
    cout << "mul--"<<z<<endl;
}
void mod(int x, int y)
{
    int z;
    z = x %y;
    cout << "mod--"<<z;
}
int main()
{
    int a = 100;
    int b = 3;
    // calling the function with name 'sum'
     sum (a, b);
     sub (a, b);
     mul (a, b);
     mod (a, b);
}
